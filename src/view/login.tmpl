<div ng-controller="TodoListController as todoList">
  <div class="container">

    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

      <!-- <div class="row">
      <div class="text-center">
      <img src="http://www.ku.ac.th/web2012/resources/template2/ui/images/logo.png">
    </div>
  </div> -->

  <!-- <div class="panel panel-primary" style="border-color: #5E8CB3;">
    <div class="panel-heading" style="background-color: #5E8CB3;border-color: #5E8CB3;"> -->
    <div class="panel panel-primary">
      <div class="panel-heading">
      <div class="panel-title text-left"><strong>Log in</strong></div>
    </div>

    <div class="panel-body" >

      <form id="form" class="form-horizontal" ng-submit="todoList.login()">

        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <input ng-model="todoList.username" type="text" class="form-control" name="user" value="" placeholder="Student ID (56XXXXXXXX)">
        </div>

        <div class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <input ng-model="todoList.password" type="password" class="form-control" name="password" placeholder="Password">
        </div>

        <div class="form-group">
          <!-- Button -->
          <div class="col-sm-12 controls">
            <button type="submit" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-log-in"></i> Log in</button>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>
</div>
